@*@model DataAccess.Entities.Kitap*@
@model KitapModel

@{
    ViewData["Title"] = "Ekle";
}

<h1>@ViewData["Title"]</h1>

<h4>Kitap</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Kitaplar" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Adi" class="control-label"></label>
                <input asp-for="Adi" class="form-control" />
                <span asp-validation-for="Adi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aciklamasi" class="control-label"></label>
                <textarea asp-for="Aciklamasi" class="form-control"></textarea>
                <span asp-validation-for="Aciklamasi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YayımTarihi" class="control-label"></label>
                <input asp-for="YayımTarihi" class="form-control" id="tarih" type="text" />
                <span asp-validation-for="YayımTarihi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirimFiyati" class="control-label"></label>
                <input asp-for="BirimFiyati" class="form-control" />
                <span asp-validation-for="BirimFiyati" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StokMiktari" class="control-label"></label>
                <input asp-for="StokMiktari" class="form-control" />
                <span asp-validation-for="StokMiktari" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TurId" class="control-label"></label>
                <select asp-for="TurId" class ="form-control" asp-items="ViewBag.TurId">
                <option value="">-- Seçiniz --</option>
                </select>&nbsp
            </div>
            
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Dön</a>
</div>

@section Scripts
{
	<partial name="_ValidationScriptsPartial" />

	<link href="/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet" />
    <script src="/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script src="/plugins/bootstrap-datepicker/locales/bootstrap-datepicker.tr.min.js"></script>

	<script>
		$(function(){
			$('#tarih').datepicker({
				todayBtn: "linked",
				clearBtn: true,
				language: "tr",
				orientation: "top auto",
				autoclose: true,
				todayHighlight: true
			});
		});
	</script>
}
